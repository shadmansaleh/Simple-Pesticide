{
  "manifest_version": 3,
  "name": "Simple Pesticide",
  "version": "1.0",
  "description": "Adds css border to elements on page for debugging",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Inject Borders",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
