{
  "manifest_version": 3,
  "name": "simple pesticide",
  "version": "1.0",
  "description": "Adds different border colors based on element depth.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Inject Borders"
  }
}
